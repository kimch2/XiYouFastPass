<UserControl
    x:Class="SocketClientDemo.UserControls.LoginButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SocketClientDemo.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
  >

    
    <RelativePanel Background="White"  Width="80" Height="80" >
        <Image x:ConnectionId='1' x:Name="image" Width="100"  Height="50" Source="{Binding ImgSource}"></Image>
        <TextBlock Text="{Binding Name}" FontSize="15" Margin="10 0 0 0" RelativePanel.Below="image" Foreground="#678CB4"></TextBlock>
    </RelativePanel>
</UserControl>

